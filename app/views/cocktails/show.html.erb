
<div class="mt-5 d-flex">
    <div class="card mb-2" style="width: 24rem;">
      <img class="card-img-top" src="https://via.placeholder.com/250" alt="Card image cap">
  </div>

  <div class="ml-5 w-50">
    <div class="border-bottom py-2 mb-4">
      <h2><%= @cocktail.name %></h2>
    </div>

    <div class="mb-2">
      <strong>Description:</strong><br>
      <% @cocktail.doses.each do |dose| %>
        <%= dose.description %>
      <% end %>
    </div>

    <div class="mb-5">
      <strong>Ingredients:</strong><br>
      <% @cocktail.ingredients.each do |ingredient| %>
        <%= ingredient.name %>
      <% end %>
    </div>


    <div class="form-actions">
      <%= link_to 'Add Ingredients', new_cocktail_dose_path(@cocktail.id) %>
    </div>
    <div>
      <%= link_to 'Back to cocktails', cocktails_path %>
    </div>
  </div>
</div>

