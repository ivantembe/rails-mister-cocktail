<div class="mt-5">
  <h1>
    <%= @cocktail.name %>
  </h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="w-50">
        <div class="form-group">
          <%= f.input :description, class: 'form-control' %>
        </div>

        <div class="form-group">
           <%= f.association :ingredient, class: 'form-control' %>
        </div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>

  <div class="mt-3">
      <%= link_to 'Back to cocktails', cocktails_path %>
    </div>
</div>


